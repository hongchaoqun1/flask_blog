{% block scripts %}
<script src="https://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
<script type=text/javascript>

$(function(){
 $("#sub").click(function(){
  var txt = $("#sub").html();
  var user_id = $("#hidden").value()
  var value
  
  if(txt=="点击收藏"){
  $("#sub").text( "取消收藏");
  value = 1;
  }else{
  $("#sub").text("点击收藏");
  value = 0;
  };


params = {"value":value, "id":user_id}
$.ajax({
type: "POST",
url: "{{ url_for('main.is_collect') }}",
dataType: "json",
data: JSON.stringify(params),
contentType: "application/json"
})

  
 })
})
</script>
{% endblock %}
